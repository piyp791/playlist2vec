<body>

    <div id="wrapper">
        <!-- start header -->
        <header>
            <div class="top">
                <div class="container">
                    <div class="row"></div>
                </div>
            </div>
            <div class="container">
                <div class="row nomargin">
                    <div class="span4">
                        <div class="logo">
                            <h1><a href="/"></i> Playlist2vec</a></h1>
                        </div>
                    </div>
                    <div class="span8">
                        <div class="navbar navbar-static-top">
                            <div class="navigation">
                                <nav>
                                    <ul class="nav topnav">
                                        <li><a href="/">Home</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- end navigation -->
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- end header -->

        <section id="inner-headline">
            <div class="container">

                <div class="row">
                    <div class="span12">
                        <div class="inner-heading">
                            <h2>Recommendation System Demo</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="content">
            <div class="container">
                <div id="loader" style="display: none;"></div>
                <div id="system-info" class="row">
                    <p id="system-info-text">This system is designed to
                        recommend playlists based
                        on a query playlist. <br>To see how it works, select a random playlist or search for something.
                        <i>punk rock</i>
                    </p>

                    <div id="random-div" class="span6">
                        <button class="btn-large btn-primary" id="random-play-search" value="randplaylist">
                            Select Random Playlist
                        </button>
                    </div>

                    <div class="span4" id="legend">
                        <p>
                            <button disabled="true" class="demo-buttons query-legend"></button>&nbsp;<b>Query</b>
                            <button disabled="true" class="demo-buttons result-legend"></button>&nbsp;<b>Result</b>
                        </p>
                    </div>

                    <div id="search-bar-div" class="span6">
                        <input type="text" name="playtext" id="play-query-text" maxlength="50"
                            placeholder="indie-rock" />
                        <input id="selected-playlist" type="hidden"><br>
                        <button class="btn-large btn-success" id="play-search" value="playquery">Search my
                            playlist</button>
                    </div>

                </div>
                <div class="row">
                    <div class="span12">
                        <div class="clearfix"></div>
                        <div class="row">
                            <section id="projects">
                                <p id="results-desc">Playlists shown below are ranked according to their similarity with
                                    the query playlist.</p>
                                <ul id="thumbs" class="grid cs-style-3 portfolio"></ul>
                            </section>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer>
            <div id="sub-footer">
                <div class="container">
